<h2>My sharings</h2>

<% @posts.each do |post| %>
<div class="my-posts">
  <div class="box post-item", id="smaller-post-item">
    <div class="post-left-side">
      <%= image_tag current_user.user_information.avatar.url(:medium), :class=>"post-head" %>
      <div class="post-username">
        <%= link_to current_user.user_information.name, profile_path(current_user.id) %>
      </div>
      <%= image_tag "mood"+post.mood.to_s+".png", :class=>"post-face" %>
    </div>
  <div class="post-content">
    <p><%= post.updated_at %></p>
    <p class="message"><%= post.message %></p>
    <%= link_to 'edit', edit_post_path(post) %>
    <%= link_to 'delete', post_path(post), :method=>:delete %>
  </div>
  </div>
</div>
<% end %>