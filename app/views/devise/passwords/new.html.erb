<%= image_tag "sign.jpg", :id => "intro"%>
<div class="session_area">

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, placeholder: "Email", class: 'session_input', autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'session_btn', id: 'reset_btn'%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
