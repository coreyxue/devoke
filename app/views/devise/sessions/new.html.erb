<%= image_tag "sign.jpg", :id => "intro"%>
<div class="sign_area">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field" id="signin_input_fields">
      <%= f.email_field :email, placeholder: "Email", class: 'sign_input' %>
      <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: 'sign_input' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field" id="remember_me">
        <%= f.check_box :remember_me , id: 'remember_me_check_box'%>
        <%= f.label :remember_me , id: 'remember_me_label'%>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in" , class: 'sign_btn'%>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
</div>
