<%= image_tag "sign.jpg", :id => "intro"%>
<div class="session_area", id="signup_area">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <%= f.email_field :email, autofocus: true, placeholder: "Email",class: 'session_input' %>
    <!--
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    -->

    <%= f.password_field :password, autocomplete: "off", placeholder: "Password (8 characters minimum)",class: 'session_input' %>

    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation", class: 'session_input' %>

    <div class="actions">
      <%= f.submit "Sign up", class: 'session_btn', id: 'signup_btn'%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
