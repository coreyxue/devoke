<div class = "page_content">
	<div class="item-area">
		<% if @reward %>
				<div class="image-area">
					<%= image_tag 'reward_'+@reward.id.to_s+'.jpg'%>
				</div>
				<div class="redeem-area">
					<h2><%= @reward.name %></h2>
					<div id = "item-description"><%= @reward.description %></div>
					Amount: <%= @reward.amount %>
					Cost: <%= @reward.cost %></br>
					<%= link_to 'Redeem', create_redemption_path(@reward.id), class: "session_btn", id: "redeem-btn",:method=>:post %>
					<%= link_to 'Back', reward_index_path, class: "session_btn", id: "back-btn" %>
				</div>
		<% else %>
			Reward does not exist!
		<% end %>
	</div>
</div>